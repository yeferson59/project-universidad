[flake8]
max-line-length=100
exclude=.git,__pycache__,venv,env,*/migrations/*
ignore=E203, E266, E501, W503, F403, F401, D100, D101, D102, D103, D104, D105, D106, D107
select=B,C,E,F,W,T4,B9
# Ignores:
# E203: Whitespace before ':' (conflicts with Black)
# E501: Line too long (handled by Black)
# W503: Line break before binary operator (conflicts with Black)
# F403, F401: Import * and unused imports (sometimes needed in Django settings)
# D100-D107: Missing docstrings (enable these later if you want stricter docs)
